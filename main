local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")
local TweenService = game:GetService("TweenService")
local LocalPlayer = Players.LocalPlayer

local function GetSafeGui()
    if gethui then return gethui() end
    if CoreGui then return CoreGui end
    return LocalPlayer:WaitForChild("PlayerGui")
end

local parentGui = GetSafeGui()

-- [[ CORES ]] --
local COLORS = {
    BG = Color3.fromRGB(5, 5, 10),
    ACCENT = Color3.fromRGB(56, 189, 248),
    TEXT = Color3.fromRGB(255, 255, 255),
    CARD = Color3.fromRGB(15, 20, 35)
}

-- [[ UI PRINCIPAL ]] --
local sg = Instance.new("ScreenGui")
sg.Name = "ChinelaoPremium_Minimizable"
sg.ResetOnSpawn = false
sg.Parent = parentGui

local Main = Instance.new("Frame", sg)
Main.Size = UDim2.fromOffset(580, 350)
Main.Position = UDim2.new(0.5, -290, 0.5, -175)
Main.BackgroundColor3 = COLORS.BG
Main.BorderSizePixel = 0
Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 12)
local Stroke = Instance.new("UIStroke", Main)
Stroke.Color = COLORS.ACCENT
Stroke.Thickness = 1.5

-- [[ BOT√ÉO FLUTUANTE (PARA QUANDO ESTIVER MINIMIZADO) ]] --
local OpenBtn = Instance.new("TextButton", sg)
OpenBtn.Size = UDim2.fromOffset(50, 50)
OpenBtn.Position = UDim2.new(0, 20, 0.5, -25)
OpenBtn.BackgroundColor3 = COLORS.BG
OpenBtn.Text = "CP"
OpenBtn.TextColor3 = COLORS.ACCENT
OpenBtn.Font = Enum.Font.GothamBold
OpenBtn.TextSize = 20
OpenBtn.Visible = false
Instance.new("UICorner", OpenBtn).CornerRadius = UDim.new(1, 0)
local OpenStroke = Instance.new("UIStroke", OpenBtn)
OpenStroke.Color = COLORS.ACCENT
OpenStroke.Thickness = 2

-- [[ L√ìGICA DE MINIMIZAR ]] --
local function ToggleUI()
    local isVisible = Main.Visible
    Main.Visible = not isVisible
    OpenBtn.Visible = isVisible
end

-- Bot√£o Minimizar (‚Äî)
local MinimizeBtn = Instance.new("TextButton", Main)
MinimizeBtn.Size = UDim2.fromOffset(30, 30)
MinimizeBtn.Position = UDim2.new(1, -70, 0, 5)
MinimizeBtn.Text = "‚Äî"
MinimizeBtn.TextColor3 = COLORS.TEXT
MinimizeBtn.BackgroundTransparency = 1
MinimizeBtn.TextSize = 18
MinimizeBtn.Font = Enum.Font.GothamBold

-- Bot√£o Fechar (X)
local CloseBtn = Instance.new("TextButton", Main)
CloseBtn.Size = UDim2.fromOffset(30, 30)
CloseBtn.Position = UDim2.new(1, -35, 0, 5)
CloseBtn.Text = "X"
CloseBtn.TextColor3 = Color3.fromRGB(255, 80, 80)
CloseBtn.BackgroundTransparency = 1
CloseBtn.TextSize = 18
CloseBtn.Font = Enum.Font.GothamBold

MinimizeBtn.MouseButton1Click:Connect(ToggleUI)
OpenBtn.MouseButton1Click:Connect(ToggleUI)
CloseBtn.MouseButton1Click:Connect(function() sg:Destroy() end)

-- [ Resto da sua interface (Sidebar, Helper, etc.) vai aqui conforme os c√≥digos anteriores ] --
local Title = Instance.new("TextLabel", Main)
Title.Size = UDim2.new(0, 200, 0, 40)
Title.Position = UDim2.new(0, 15, 0, 0)
Title.Text = "CHINELAO PREMIUM"
Title.TextColor3 = COLORS.ACCENT
Title.Font = Enum.Font.GothamBold
Title.TextSize = 14
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

-- Draggable (Funciona tanto no Main quanto no bot√£o flutuante)
local function makeDraggable(frame)
    local dragging, dragInput, dragStart, startPos
    frame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true; dragStart = input.Position; startPos = frame.Position
        end
    end)
    frame.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    game:GetService("UserInputService").InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end
    end)
end

makeDraggable(Main)
makeDraggable(OpenBtn)

print("ü©¥ CHINELAO PREMIUM: Minimizar Adicionado!")

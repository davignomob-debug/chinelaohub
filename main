--[[ 
    ü©¥ CHINELAOHUB - CHILLI STYLE + FLY EDITION
    - Layout: Sidebar Lateral
    - Visual: Chilli Hub Deep Sea
    - Abas: Radar, Servers e Fly
]]

local Players = game:GetService("Players")
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")
local CoreGui = game:GetService("CoreGui")

local LocalPlayer = Players.LocalPlayer

-- [[ FUN√á√ÉO PARA UI PROTEGIDA ]] --
local function GetSafeGui()
    if gethui then return gethui() end
    if CoreGui then return CoreGui end
    return LocalPlayer:WaitForChild("PlayerGui")
end

local parentGui = GetSafeGui()

-- [[ PALETA DE CORES CHILLI HUB ]] --
local COLORS = {
    BG = Color3.fromRGB(16, 24, 39),
    GRAD_1 = Color3.fromRGB(12, 18, 32),
    GRAD_2 = Color3.fromRGB(21, 30, 47),
    GRAD_3 = Color3.fromRGB(10, 82, 120),
    STROKE_MAIN = Color3.fromRGB(56, 189, 248),
    TEXT = Color3.fromRGB(241, 245, 249),
    ACCENT = Color3.fromRGB(34, 211, 238),
    BTN_SIDE = Color3.fromRGB(30, 41, 59)
}

-- [[ UI PRINCIPAL ]] --
local sg = Instance.new("ScreenGui")
sg.Name = "ChinelaoHub_FlyEdition"
sg.ResetOnSpawn = false
sg.Parent = parentGui

local Main = Instance.new("Frame", sg)
Main.Size = UDim2.fromOffset(550, 350)
Main.Position = UDim2.new(0.5, -275, 0.5, -175)
Main.BackgroundColor3 = COLORS.BG
Main.BorderSizePixel = 0
Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 20)

local BgGrad = Instance.new("UIGradient", Main)
BgGrad.Rotation = 35
BgGrad.Color = ColorSequence.new({
    ColorSequenceKeypoint.new(0.00, COLORS.GRAD_1),
    ColorSequenceKeypoint.new(0.55, COLORS.GRAD_2),
    ColorSequenceKeypoint.new(1.00, COLORS.GRAD_3),
})

local Glow = Instance.new("UIStroke", Main)
Glow.Thickness = 2
Glow.Color = COLORS.STROKE_MAIN
Glow.Transparency = 0.2

-- [[ SIDEBAR LATERAL ]] --
local Sidebar = Instance.new("Frame", Main)
Sidebar.Size = UDim2.new(0, 140, 1, -60)
Sidebar.Position = UDim2.new(0, 15, 0, 45)
Sidebar.BackgroundTransparency = 1

local UIList = Instance.new("UIListLayout", Sidebar)
UIList.Padding = UDim.new(0, 8)

local function createTabBtn(name)
    local btn = Instance.new("TextButton", Sidebar)
    btn.Size = UDim2.new(1, 0, 0, 35)
    btn.BackgroundColor3 = COLORS.BTN_SIDE
    btn.Text = name
    btn.TextColor3 = COLORS.TEXT
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 12
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 8)
    Instance.new("UIStroke", btn).Color = COLORS.STROKE_MAIN
    return btn
end

local btnRadar = createTabBtn("RADAR")
local btnServers = createTabBtn("SERVERS")
local btnFly = createTabBtn("FLY")

-- [[ CONTAINER DE CONTE√öDO ]] --
local Container = Instance.new("Frame", Main)
Container.Size = UDim2.new(1, -185, 1, -60)
Container.Position = UDim2.new(0, 170, 0, 45)
Container.BackgroundTransparency = 1

-- P√ÅGINAS
local function createPage()
    local p = Instance.new("Frame", Container)
    p.Size = UDim2.new(1, 0, 1, 0)
    p.BackgroundTransparency = 1
    p.Visible = false
    return p
end

local PageRadar = createPage()
PageRadar.Visible = true
local PageServers = createPage()
local PageFly = createPage()

-- [[ CONTE√öDO FLY ]] --
local FlyBtn = Instance.new("TextButton", PageFly)
FlyBtn.Size = UDim2.new(1, 0, 0, 50)
FlyBtn.BackgroundColor3 = COLORS.ACCENT
FlyBtn.Text = "LOAD FLY GUI V3"
FlyBtn.Font = Enum.Font.GothamBlack
FlyBtn.TextColor3 = COLORS.BG
Instance.new("UICorner", FlyBtn).CornerRadius = UDim.new(0, 12)

FlyBtn.MouseButton1Click:Connect(function()
    FlyBtn.Text = "LOADING..."
    loadstring(game:HttpGet("https://raw.githubusercontent.com/XNEOFF/FlyGuiV3/main/FlyGuiV3.lua"))()
    FlyBtn.Text = "FLY LOADED!"
    task.wait(2)
    FlyBtn.Text = "LOAD FLY GUI V3"
end)

-- [[ CONTE√öDO SERVERS ]] --
local bGen = Instance.new("TextButton", PageServers)
bGen.Size = UDim2.new(1, 0, 0, 50)
bGen.BackgroundColor3 = Color3.fromRGB(140, 225, 0)
bGen.Text = "SERVER PREMIUM (HOP)"
bGen.Font = Enum.Font.GothamBlack
bGen.TextColor3 = COLORS.BG
Instance.new("UICorner", bGen).CornerRadius = UDim.new(0, 12)

bGen.MouseButton1Click:Connect(function()
    local success, result = pcall(function()
        return HttpService:JSONDecode(game:HttpGet("https://games.roblox.com/v1/games/" .. game.PlaceId .. "/servers/Public?sortOrder=Asc&limit=100"))
    end)
    if success and result.data then
        for _, s in ipairs(result.data) do
            if s.playing < s.maxPlayers and s.id ~= game.JobId then
                TeleportService:TeleportToPlaceInstance(game.PlaceId, s.id)
                break
            end
        end
    end
end)

-- [[ L√ìGICA DE TROCA DE ABAS ]] --
local function showPage(page, btn)
    PageRadar.Visible = false
    PageServers.Visible = false
    PageFly.Visible = false
    
    btnRadar.BackgroundColor3 = COLORS.BTN_SIDE
    btnServers.BackgroundColor3 = COLORS.BTN_SIDE
    btnFly.BackgroundColor3 = COLORS.BTN_SIDE
    
    page.Visible = true
    btn.BackgroundColor3 = COLORS.ACCENT
end

btnRadar.MouseButton1Click:Connect(function() showPage(PageRadar, btnRadar) end)
btnServers.MouseButton1Click:Connect(function() showPage(PageServers, btnServers) end)
btnFly.MouseButton1Click:Connect(function() showPage(PageFly, btnFly) end)

-- T√çTULO E FECHAR
local Title = Instance.new("TextLabel", Main)
Title.Size = UDim2.new(1, -40, 0, 35)
Title.Position = UDim2.new(0, 20, 0, 5)
Title.Text = "CHINELAOHUB // FLY EDITION"
Title.TextColor3 = COLORS.TEXT
Title.Font = Enum.Font.GothamBold
Title.TextXAlignment = Enum.TextXAlignment.Left
Title.BackgroundTransparency = 1

local CloseBtn = Instance.new("TextButton", Main)
CloseBtn.Size = UDim2.fromOffset(30, 30)
CloseBtn.Position = UDim2.new(1, -40, 0, 10)
CloseBtn.Text = "X"
CloseBtn.TextColor3 = Color3.new(1,0,0)
CloseBtn.BackgroundTransparency = 1
CloseBtn.MouseButton1Click:Connect(function() sg:Destroy() end)

-- Draggable
local function drag(frame)
    local dragging, dragInput, dragStart, startPos
    frame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
        end
    end)
    frame.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    game:GetService("UserInputService").InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end
    end)
end
drag(Main)

print("ü©¥ CHINELAOHUB: FLY TAB & CHILLI STYLE LOADED!")

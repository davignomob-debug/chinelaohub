Main.AnchorPoint = Vector2.new(0.5, 0.5); Main.Size = UDim2.fromOffset(720, 480)
Main.Position = UDim2.new(0.5, 0, 0.5, 0); Main.BackgroundColor3 = COLORS.BG; Main.ZIndex = 10
Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 12)
Instance.new("UIStroke", Main).Color = COLORS.STROKE

-- TOP BAR
local TopBar = Instance.new("Frame", Main)
TopBar.Size = UDim2.new(1, 0, 0, 50); TopBar.BackgroundTransparency = 1; TopBar.ZIndex = 11

local Title = Instance.new("TextLabel", TopBar)
Title.Size = UDim2.new(0, 300, 1, 0); Title.Position = UDim2.new(0, 25, 0, 0); Title.BackgroundTransparency = 1
Title.Text = "CHINELÃO HUB"; Title.TextColor3 = COLORS.TEXT; Title.Font = Enum.Font.GothamBold; Title.TextSize = 18; Title.TextXAlignment = 0

-- CONTROLES
local Controls = Instance.new("Frame", TopBar)
Controls.Size = UDim2.new(0, 100, 1, 0); Controls.Position = UDim2.new(1, -110, 0, 0); Controls.BackgroundTransparency = 1

local function createControlBtn(txt, pos, hoverColor, callback)
    local b = Instance.new("TextButton", Controls)
    b.Size = UDim2.fromOffset(35, 35); b.Position = UDim2.new(0, pos, 0.5, -17); b.BackgroundColor3 = Color3.fromRGB(30, 35, 45)
    b.Text = txt; b.TextColor3 = COLORS.TEXT; b.Font = Enum.Font.GothamBold; b.TextSize = 16; b.ZIndex = 15; Instance.new("UICorner", b).CornerRadius = UDim.new(0, 8)
    b.MouseButton1Click:Connect(callback)
end

createControlBtn("-", 0, COLORS.ACCENT, function() Main.Visible = false; OpenBtn.Visible = true end)
createControlBtn("X", 45, COLORS.HOVER_RED, function() sg:Destroy() end)
OpenBtn.MouseButton1Click:Connect(function() OpenBtn.Visible = false; Main.Visible = true end)

-- SIDEBAR
local Sidebar = Instance.new("Frame", Main)
Sidebar.Size = UDim2.new(0, 180, 1, -120); Sidebar.Position = UDim2.new(0, 0, 0, 60); Sidebar.BackgroundColor3 = COLORS.SIDEBAR; Sidebar.BackgroundTransparency = 0.6; Sidebar.ZIndex = 11
Instance.new("UIListLayout", Sidebar).HorizontalAlignment = Enum.HorizontalAlignment.Center

local Container = Instance.new("Frame", Main)
Container.Size = UDim2.new(1, -210, 1, -80); Container.Position = UDim2.new(0, 195, 0, 65); Container.BackgroundTransparency = 1; Container.ZIndex = 11

local pages = {}
local function createPage(name)
    local p = Instance.new("ScrollingFrame", Container); p.Size = UDim2.new(1, 0, 1, 0); p.BackgroundTransparency = 1; p.Visible = false; p.ScrollBarThickness = 3; p.ZIndex = 15; p.AutomaticCanvasSize = Enum.AutomaticSize.Y
    Instance.new("UIListLayout", p).Padding = UDim.new(0, 12); pages[name] = p; return p
end

local function createTab(name)
    local b = Instance.new("TextButton", Sidebar)
    b.Size = UDim2.new(0, 160, 0, 42); b.BackgroundColor3 = Color3.fromRGB(25, 30, 40); b.Text = name; b.TextColor3 = COLORS.TEXT; b.Font = Enum.Font.GothamBold; b.TextSize = 14; b.ZIndex = 16; Instance.new("UICorner", b).CornerRadius = UDim.new(0, 8)
    b.MouseButton1Click:Connect(function() for _, v in pairs(pages) do v.Visible = false end; pages[name].Visible = true end)
end

local pPlayer = createPage("PLAYER"); pPlayer.Visible = true
local pFarm = createPage("FARM")
createTab("PLAYER"); createTab("FARM")

-- [[ COMPONENTES REUTILIZÁVEIS ]] --
local function createToggle(parent, text, callback)
    local card = Instance.new("Frame", parent); card.Size = UDim2.new(1, -10, 0, 55); card.BackgroundColor3 = COLORS.CARD_BG; card.ZIndex = 16; Instance.new("UICorner", card).CornerRadius = UDim.new(0, 8)
    local l = Instance.new("TextLabel", card); l.Text = text; l.Size = UDim2.new(1, -70, 1, 0); l.Position = UDim2.new(0, 18, 0, 0); l.TextColor3 = COLORS.TEXT; l.Font = Enum.Font.GothamSemibold; l.TextSize = 15; l.BackgroundTransparency = 1; l.TextXAlignment = 0
    local btn = Instance.new("TextButton", card); btn.Size = UDim2.fromOffset(45, 24); btn.Position = UDim2.new(1, -60, 0.5, -12); btn.BackgroundColor3 = COLORS.TOGGLE_OFF; btn.Text = ""; Instance.new("UICorner", btn).CornerRadius = UDim.new(1, 0)
    local dot = Instance.new("Frame", btn); dot.Size = UDim2.fromOffset(18, 18); dot.Position = UDim2.new(0, 3, 0.5, -9); dot.BackgroundColor3 = Color3.new(1,1,1); Instance.new("UICorner", dot).CornerRadius = UDim.new(1,0)
    local act = false
    btn.MouseButton1Click:Connect(function()
        act = not act
        dot:TweenPosition(act and UDim2.new(1, -21, 0.5, -9) or UDim2.new(0, 3, 0.5, -9), "Out", "Quad", 0.15, true)
        btn.BackgroundColor3 = act and COLORS.TOGGLE_ON or COLORS.TOGGLE_OFF
        callback(act)
    end)
end

local function createMultiDropdown(parent, text, list, callback)
    local card = Instance.new("Frame", parent); card.Size = UDim2.new(1, -10, 0, 60); card.BackgroundColor3 = COLORS.CARD_BG; card.ZIndex = 16; Instance.new("UICorner", card).CornerRadius = UDim.new(0, 8)
    local title = Instance.new("TextLabel", card); title.Text = text; title.Size = UDim2.new(1, -150, 1, 0); title.Position = UDim2.new(0, 18, 0, 0); title.TextColor3 = COLORS.TEXT; title.Font = Enum.Font.GothamSemibold; title.TextSize = 14; title.BackgroundTransparency = 1; title.TextXAlignment = 0
    local btn = Instance.new("TextButton", card); btn.Text = "Select ▼"; btn.Size = UDim2.new(0, 130, 0, 35); btn.Position = UDim2.new(1, -145, 0.5, -17.5); btn.BackgroundColor3 = Color3.fromRGB(30, 35, 45); btn.TextColor3 = COLORS.ACCENT; btn.Font = Enum.Font.GothamBold; btn.TextSize = 12; Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    local dropFrame = Instance.new("ScrollingFrame", parent); dropFrame.Visible = false; dropFrame.Size = UDim2.new(1, -10, 0, 150); dropFrame.BackgroundColor3 = COLORS.SIDEBAR; dropFrame.ZIndex = 50; dropFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y; Instance.new("UIListLayout", dropFrame).Padding = UDim.new(0, 4)
    btn.MouseButton1Click:Connect(function() dropFrame.Visible = not dropFrame.Visible end)
    for _, item in pairs(list) do
        local opt = Instance.new("TextButton", dropFrame); opt.Text = item; opt.Size = UDim2.new(1, 0, 0, 35); opt.BackgroundColor3 = Color3.fromRGB(40, 45, 55); opt.TextColor3 = COLORS.TEXT; opt.ZIndex = 51; Instance.new("UICorner", opt)
        opt.MouseButton1Click:Connect(function()
            if table.find(_G.SelectedBrainrots, item) then
                table.remove(_G.SelectedBrainrots, table.find(_G.SelectedBrainrots, item))
                opt.TextColor3 = COLORS.TEXT; opt.BackgroundColor3 = Color3.fromRGB(40, 45, 55)
            else
                table.insert(_G.SelectedBrainrots, item)
                opt.TextColor3 = COLORS.NEON_GREEN; opt.BackgroundColor3 = Color3.fromRGB(20, 60, 40)
            end
            btn.Text = #_G.SelectedBrainrots > 0 and "Selected: "..#_G.SelectedBrainrots or "Select ▼"
            callback(_G.SelectedBrainrots)
        end)
    end
end

-- [[ ABA FARM CONFIG ]] --
local brainrotList = {"pipi potato", "tung tung tung", "sahur", "tim cheease", "lirililarila", "fluri flura", "cacto", "hipopotamo"}

createMultiDropdown(pFarm, "Target Brainrots", brainrotList, function(choices) _G.SelectedBrainrots = choices end)
createToggle(pFarm, "Enable Multi-Farm (TP + BUY)", function(s) _G.AutoFarmEnabled = s end)

-- [[ ABA PLAYER CONFIG ]] --
local function createSlider(parent, text, min, max, callback)
    local card = Instance.new("Frame", parent); card.Size = UDim2.new(1, -10, 0, 85); card.BackgroundColor3 = COLORS.CARD_BG; card.ZIndex = 16; Instance.new("UICorner", card).CornerRadius = UDim.new(0, 8)
    local title = Instance.new("TextLabel", card); title.Text = text; title.Size = UDim2.new(0, 200, 0, 20); title.Position = UDim2.new(0, 15, 0, 10); title.TextColor3 = COLORS.TEXT; title.Font = Enum.Font.GothamBold; title.TextSize = 14; title.BackgroundTransparency = 1; title.TextXAlignment = 0
    local valLbl = Instance.new("TextLabel", card); valLbl.Text = _G.WalkSpeedValue; valLbl.Size = UDim2.new(0, 50, 0, 20); valLbl.Position = UDim2.new(1, -65, 0, 10); valLbl.TextColor3 = COLORS.NEON_GREEN; valLbl.Font = Enum.Font.GothamBold; valLbl.BackgroundTransparency = 1
    local sliderBg = Instance.new("Frame", card); sliderBg.Size = UDim2.new(1, -30, 0, 4); sliderBg.Position = UDim2.new(0, 15, 0, 55); sliderBg.BackgroundColor3 = Color3.fromRGB(45, 55, 72)
    local fill = Instance.new("Frame", sliderBg); fill.Size = UDim2.new(0, 0, 1, 0); fill.BackgroundColor3 = COLORS.NEON_GREEN
    local btn = Instance.new("TextButton", sliderBg); btn.Size = UDim2.fromOffset(16, 16); btn.Position = UDim2.new(0, -8, 0.5, -8); btn.BackgroundColor3 = Color3.new(1,1,1); btn.Text = ""; Instance.new("UICorner", btn).CornerRadius = UDim.new(1, 0)
    local dragging = false
    local function update()
        local percent = math.clamp((UserInputService:GetMouseLocation().X - sliderBg.AbsolutePosition.X) / sliderBg.AbsoluteSize.X, 0, 1)
        fill.Size = UDim2.new(percent, 0, 1, 0); btn.Position = UDim2.new(percent, -8, 0.5, -8)
        local val = math.floor(min + (max - min) * percent); valLbl.Text = val; callback(val)
    end
    btn.InputBegan:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseButton1 then dragging = true end end)
    UserInputService.InputEnded:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end end)
    UserInputService.InputChanged:Connect(function(i) if dragging and i.UserInputType == Enum.UserInputType.MouseMovement then update() end end)
end

createSlider(pPlayer, "Walk Speed", 16, 300, function(v) _G.WalkSpeedValue = v end)

-- [[ LOOPS DE FUNCIONAMENTO (FARM + SPEED) ]] --
task.spawn(function()
    while true do
        task.wait(0.5)
        if _G.AutoFarmEnabled and #_G.SelectedBrainrots > 0 then
            pcall(function()
                for _, target in pairs(_G.SelectedBrainrots) do
                    for _, obj in pairs(game:GetDescendants()) do
                        if obj:IsA("ProximityPrompt") then
                            local text = (obj.ObjectText .. obj.ActionText):lower()
                            if text:find(target:lower()) then
                                if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
                                    LocalPlayer.Character.HumanoidRootPart.CFrame = obj.Parent.CFrame * CFrame.new(0, 3, 0)
                                    task.wait(0.1)
                                    fireproximityprompt(obj)
                                end
                            end
                        end
                    end
                end
            end)
        end
    end
end)

task.spawn(function()
    while true do task.wait(0.1)
        pcall(function()
            if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
                LocalPlayer.Character.Humanoid.WalkSpeed = _G.WalkSpeedValue
            end
        end)
    end
end)

-- SISTEMA DE ARRASTE (CORRIGIDO)
local function makeDraggable(gui, target)
    local dragging, dragInput, dragStart, startPos
    gui.InputBegan:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseButton1 then dragging = true; dragStart = i.Position; startPos = target.Position end end)
    gui.InputChanged:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseMovement then dragInput = i end end)
    UserInputService.InputChanged:Connect(function(i) if i == dragInput and dragging then
        local d = i.Position - dragStart
        target.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + d.X, startPos.Y.Scale, startPos.Y.Offset + d.Y)
    end end)
    UserInputService.InputEnded:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end end)
end
makeDraggable(TopBar, Main); makeDraggable(OpenBtn, OpenBtn)

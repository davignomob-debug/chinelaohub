    if active then
        -- Isso faz o script atual se auto-executar na troca de server
        local queue_teleport = (syn and syn.queue_teleport) or (queue_on_teleport) or (fluxus and fluxus.queue_on_teleport)
        if queue_teleport then
            Players.LocalPlayer.OnTeleport:Connect(function(State)

--[[
    ü©¥ CHINELAOHUB - SUPREME EDITION (v30.0)
    - Interface Dark Neon Arrast√°vel
    - Detec√ß√£o por Nome, Texto (Billboard) e Material (Muta√ß√µes)
    - Sistema de Alerta com √Åudio Configur√°vel (10s)
]]

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local SoundService = game:GetService("SoundService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local pgui = player:WaitForChild("PlayerGui")

-- ============================================================
-- CONFIGURA√á√ïES DE FILTRO
-- ============================================================
local CONFIG = {
    PALAVRAS_CHAVE = {"mitico", "mythic", "secreto", "secret", "stella", "stellar", "galaxy", "galaxia"},
    MATERIAIS_MUTACAO = {Enum.Material.Neon, Enum.Material.ForceField},
    CORES = {
        OURO = Color3.fromRGB(255, 170, 0),
        DIAMANTE = Color3.fromRGB(0, 255, 255)
    },
    TEMPO_SOM = 10
}

local RadarAtivado = true
local AudioID = "9114283110"
local ItensDetectados = {}

-- ============================================================
-- FUN√á√ÉO DE ARRASTAR (DRAG TOTAL)
-- ============================================================
local function EnableDrag(frame)
    local dragging, dragInput, dragStart, startPos
    frame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then dragging = false end
            end)
        end
    end)
    frame.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
end

-- ============================================================
-- L√ìGICA DE DETEC√á√ÉO DE ELITE
-- ============================================================
local function IsRare(item)
    if not item then return false end
    local nome = item.Name:lower()
    
    -- 1. Checa Nome do Objeto
    for _, k in pairs(CONFIG.PALAVRAS_CHAVE) do if nome:find(k) then return true end end
    
    -- 2. Checa Descendentes (BillboardGuis e Partes)
    for _, v in pairs(item:GetDescendants()) do
        if v:IsA("TextLabel") and v.Visible then
            local txt = v.Text:lower()
            for _, k in pairs(CONFIG.PALAVRAS_CHAVE) do if txt:find(k) then return true end end
        elseif v:IsA("BasePart") and table.find(CONFIG.MATERIAIS_MUTACAO, v.Material) then
            -- Detec√ß√£o de Ouro/Diamante por Cor e Brilho
            local c = v.Color
            local isGold = (c.R > 0.7 and c.G > 0.5 and c.B < 0.4)
            local isDiamond = (c.R < 0.5 and c.G > 0.7 and c.B > 0.7)
            if isGold or isDiamond then return true end
        end
    end
    return false
end

local function Alert(item)
    if ItensDetectados[item] then return end
    ItensDetectados[item] = true
    
    -- Efeito Visual
    local hl = Instance.new("Highlight", item)
    hl.FillColor = Color3.new(1, 0, 0)
    hl.OutlineColor = Color3.new(1, 1, 1)
    
    -- Efeito Sonoro
    task.spawn(function()
        local s = Instance.new("Sound", SoundService)
        s.SoundId = "rbxassetid://" .. AudioID:gsub("%D", "")
        s.Volume = 2
        s:Play()
        task.wait(CONFIG.TEMPO_SOM)
        s:Destroy()
    end)
    
    -- Limpa da lista se o item sumir
    task.spawn(function()
        while item and item.Parent do task.wait(1) end
        ItensDetectados[item] = nil
    end)
end

-- ============================================================
-- INTERFACE BONITA (DARK NEON)
-- ============================================================
local sg = Instance.new("ScreenGui", pgui)
sg.Name = "Chinelaohub_Supreme"
sg.ResetOnSpawn = false

local main = Instance.new("Frame", sg)
main.Size = UDim2.new(0, 260, 0, 280)
main.Position = UDim2.new(0.5, -130, 0.4, 0)
main.BackgroundColor3 = Color3.fromRGB(10, 10, 12)
main.BorderSizePixel = 0
Instance.new("UICorner", main).CornerRadius = UDim.new(0, 10)

local stroke = Instance.new("UIStroke", main)
stroke.Color = Color3.fromRGB(255, 60, 0)
stroke.Thickness = 2

local title = Instance.new("TextLabel", main)
title.Size = UDim2.new(1, 0, 0, 40)
title.Text = "CHINELAOHUB RADAR"
title.TextColor3 = Color3.new(1, 1, 1)
title.Font = Enum.Font.FredokaOne
title.TextSize = 18
title.BackgroundColor3 = Color3.fromRGB(255, 60, 0)
Instance.new("UICorner", title).CornerRadius = UDim.new(0, 10)

local toggle = Instance.new("TextButton", main)
toggle.Size = UDim2.new(0.8, 0, 0, 45)
toggle.Position = UDim2.new(0.1, 0, 0.25, 0)
toggle.BackgroundColor3 = Color3.fromRGB(0, 200, 100)
toggle.Text = "RADAR: LIGADO"
toggle.Font = Enum.Font.GothamBold
toggle.TextColor3 = Color3.new(1, 1, 1)
toggle.TextSize = 14
Instance.new("UICorner", toggle)

local idBox = Instance.new("TextBox", main)
idBox.Size = UDim2.new(0.8, 0, 0, 35)
idBox.Position = UDim2.new(0.1, 0, 0.5, 0)
idBox.BackgroundColor3 = Color3.fromRGB(25, 25, 30)
idBox.Text = AudioID
idBox.PlaceholderText = "ID do √Åudio"
idBox.TextColor3 = Color3.fromRGB(0, 255, 255)
idBox.Font = Enum.Font.Code
Instance.new("UICorner", idBox)

local status = Instance.new("TextLabel", main)
status.Size = UDim2.new(0.8, 0, 0, 60)
status.Position = UDim2.new(0.1, 0, 0.7, 0)
status.BackgroundTransparency = 1
status.Text = "Buscando M√≠ticos e Muta√ß√µes..."
status.TextColor3 = Color3.fromRGB(150, 150, 150)
status.TextSize = 12
status.TextWrapped = true

-- Sistema de Minimizar
local miniBtn = Instance.new("TextButton", main)
miniBtn.Size = UDim2.new(0, 30, 0, 30)
miniBtn.Position = UDim2.new(1, -35, 0, 5)
miniBtn.Text = "-"
miniBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
miniBtn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", miniBtn)

local float = Instance.new("Frame", sg)
float.Size = UDim2.new(0, 50, 0, 50)
float.Position = UDim2.new(0.9, 0, 0.5, 0)
float.BackgroundColor3 = Color3.fromRGB(255, 60, 0)
float.Visible = false
Instance.new("UICorner", float).CornerRadius = UDim.new(1, 0)
local floatBtn = Instance.new("TextButton", float)
floatBtn.Size = UDim2.new(1, 0, 1, 0)
floatBtn.BackgroundTransparency = 1
floatBtn.Text = "ü©¥"
floatBtn.TextSize = 25

EnableDrag(main)
EnableDrag(float)

-- ============================================================
-- INTERATIVIDADE E VARREDURA
-- ============================================================
toggle.MouseButton1Click:Connect(function()
    RadarAtivado = not RadarAtivado
    toggle.Text = RadarAtivado and "RADAR: LIGADO" or "RADAR: DESLIGADO"
    toggle.BackgroundColor3 = RadarAtivado and Color3.fromRGB(0, 200, 100) or Color3.fromRGB(200, 50, 50)
end)

miniBtn.MouseButton1Click:Connect(function() main.Visible = false; float.Visible = true end)
floatBtn.MouseButton1Click:Connect(function() main.Visible = true; float.Visible = false end)
idBox.FocusLost:Connect(function() AudioID = idBox.Text end)

local function Monitor()
    local pasta = workspace:FindFirstChild("Drops") or workspace:FindFirstChild("Items")
    if pasta then
        pasta.ChildAdded:Connect(function(child)
            if not RadarAtivado then return end
            task.wait(0.6) -- Delay para carregar muta√ß√£o/nome
            if IsRare(child) then Alert(child) end
        end)
        
        -- Varredura Inicial
        for _, v in pairs(pasta:GetChildren()) do
            if IsRare(v) then Alert(v) end
        end
    end
end

task.spawn(Monitor)
print("ü©¥ CHINELAOHUB CARREGADO!")

local bGen = Instance.new("TextButton", PageServers)
bGen.Size = UDim2.new(1, 0, 0, 50)
bGen.BackgroundColor3 = Color3.fromRGB(140, 225, 0) -- Mantive o verde premium pra destacar
bGen.Text = "SERVER PREMIUM (HOP)"
bGen.Font = Enum.Font.GothamBlack
bGen.TextColor3 = Color3.fromRGB(16, 24, 39)
Instance.new("UICorner", bGen).CornerRadius = UDim.new(0, 12)

-- [[ L√ìGICA DE ABAS ]] --
btnRadar.MouseButton1Click:Connect(function()
    PageRadar.Visible = true
    PageServers.Visible = false
    btnRadar.BackgroundColor3 = COLORS.ACCENT
    btnRadar.TextColor3 = COLORS.BG
    btnServers.BackgroundColor3 = COLORS.BTN_SIDE
    btnServers.TextColor3 = COLORS.TEXT
end)

btnServers.MouseButton1Click:Connect(function()
    PageRadar.Visible = false
    PageServers.Visible = true
    btnServers.BackgroundColor3 = COLORS.ACCENT
    btnServers.TextColor3 = COLORS.BG
    btnRadar.BackgroundColor3 = COLORS.BTN_SIDE
    btnRadar.TextColor3 = COLORS.TEXT
end)

-- [[ L√ìGICA SERVER PREMIUM ]] --
bGen.MouseButton1Click:Connect(function()
    bGen.Text = "SEARCHING..."
    local success, result = pcall(function()
        return HttpService:JSONDecode(game:HttpGet("https://games.roblox.com/v1/games/" .. game.PlaceId .. "/servers/Public?sortOrder=Asc&limit=100"))
    end)
    if success and result.data then
        for _, server in ipairs(result.data) do
            if server.playing < server.maxPlayers and server.id ~= game.JobId then
                TeleportService:TeleportToPlaceInstance(game.PlaceId, server.id)
                break
            end
        end
    end
end)

-- [[ T√çTULO E FECHAR ]] --
local Title = Instance.new("TextLabel", Main)
Title.Size = UDim2.new(1, -40, 0, 35)

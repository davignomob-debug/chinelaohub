local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")

local LocalPlayer = Players.LocalPlayer

-- [[ FUN√á√ÉO PARA RODAR EM LUGAR SEGURO ]] --
local function GetSafeGui()
    if gethui then return gethui() end
    if CoreGui then return CoreGui end
    return LocalPlayer:WaitForChild("PlayerGui")
end

local parentGui = GetSafeGui()

-- [[ PALETA DE CORES PREMIUM ]] --
local COLORS = {
    BG = Color3.fromRGB(16, 24, 39),
    GRAD_1 = Color3.fromRGB(12, 18, 32),
    GRAD_2 = Color3.fromRGB(21, 30, 47),
    GRAD_3 = Color3.fromRGB(10, 82, 120),
    STROKE_MAIN = Color3.fromRGB(56, 189, 248),
    TEXT = Color3.fromRGB(241, 245, 249),
    ACCENT = Color3.fromRGB(34, 211, 238)
}

-- [[ CONFIGS DO HUB ]] --
local RadarActive = true
local CurrentID = "9114283110"

-- [[ UI PRINCIPAL ]] --
local sg = Instance.new("ScreenGui")
sg.Name = "ChinelaoHub_Premium"
sg.ResetOnSpawn = false
sg.Parent = parentGui

-- Fun√ß√£o de Arrastar (Draggable)
local function MakeDraggable(frame)
    local dragging, dragInput, dragStart, startPos
    frame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
        end
    end)
    frame.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    UserInputService.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end
    end)
end

-- CARD PRINCIPAL (Estilo Chilli Hub)
local MainCard = Instance.new("Frame")
MainCard.Name = "MainCard"
MainCard.Size = UDim2.fromOffset(380, 230)
MainCard.Position = UDim2.new(0.5, -190, 0.4, -115)
MainCard.BackgroundColor3 = COLORS.BG
MainCard.BorderSizePixel = 0
MainCard.Parent = sg

local Corner = Instance.new("UICorner", MainCard)
Corner.CornerRadius = UDim.new(0, 20)

-- Gradiente de Fundo
local BgGrad = Instance.new("UIGradient", MainCard)
BgGrad.Rotation = 35
BgGrad.Color = ColorSequence.new({
    ColorSequenceKeypoint.new(0.00, COLORS.GRAD_1),
    ColorSequenceKeypoint.new(0.55, COLORS.GRAD_2),
    ColorSequenceKeypoint.new(1.00, COLORS.GRAD_3),
})

-- Bordas com Brilho (Strokes)

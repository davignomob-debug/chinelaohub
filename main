local Players = game:GetService("Players")
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")
local CoreGui = game:GetService("CoreGui")
local UserInputService = game:GetService("UserInputService")
local LocalPlayer = Players.LocalPlayer

local function GetSafeGui()
    if gethui then return gethui() end
    if CoreGui then return CoreGui end
    return LocalPlayer:WaitForChild("PlayerGui")
end

local parentGui = GetSafeGui()

local COLORS = {
    BG = Color3.fromRGB(13, 17, 23),
    SIDEBAR = Color3.fromRGB(10, 12, 16),
    STROKE = Color3.fromRGB(56, 189, 248),
    TEXT = Color3.fromRGB(241, 245, 249),
    ACCENT = Color3.fromRGB(34, 211, 238),
    CARD_BG = Color3.fromRGB(17, 22, 28),
    TOGGLE_ON = Color3.fromRGB(34, 211, 238),
    TOGGLE_OFF = Color3.fromRGB(45, 55, 72),
    HOVER_RED = Color3.fromRGB(255, 60, 60),
    NEON_GREEN = Color3.fromRGB(0, 255, 0)
}

if parentGui:FindFirstChild("ChinelaoPremium_Full_V12") then
    parentGui:FindFirstChild("ChinelaoPremium_Full_V12"):Destroy()
end

local sg = Instance.new("ScreenGui")
sg.Name = "ChinelaoPremium_Full_V12"
sg.ResetOnSpawn = false
sg.Parent = parentGui

-- [[ ESTADOS GLOBAIS ]] --
_G.WalkSpeedValue = 16
_G.WalkSpeedEnabled = false
_G.AutoPurchase = false
_G.AutoFarmEnabled = false
_G.FlyEnabled = false
_G.FlySpeed = 50
_G.SelectedBrainrots = {}

-- [[ BOTÃO ABRIR ]] --
local OpenBtn = Instance.new("ImageButton", sg)
OpenBtn.Size = UDim2.fromOffset(60, 60); OpenBtn.Position = UDim2.new(0, 20, 0.5, 0)
OpenBtn.BackgroundTransparency = 0.2; OpenBtn.BackgroundColor3 = COLORS.BG; OpenBtn.Visible = false; OpenBtn.ZIndex = 100
OpenBtn.Image = "rbxassetid://131109000100412"
Instance.new("UICorner", OpenBtn).CornerRadius = UDim.new(0, 12)
Instance.new("UIStroke", OpenBtn).Color = COLORS.ACCENT

-- [[ FRAME PRINCIPAL ]] --
local Main = Instance.new("Frame", sg)
Main.AnchorPoint = Vector2.new(0.5, 0.5); Main.Size = UDim2.fromOffset(720, 480)
Main.Position = UDim2.new(0.5, 0, 0.5, 0); Main.BackgroundColor3 = COLORS.BG; Main.ZIndex = 10
Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 12)
Instance.new("UIStroke", Main).Color = COLORS.STROKE

-- TOP BAR
local TopBar = Instance.new("Frame", Main)
TopBar.Size = UDim2.new(1, 0, 0, 50); TopBar.BackgroundTransparency = 1; TopBar.ZIndex = 11
local Title = Instance.new("TextLabel", TopBar)
Title.Size = UDim2.new(0, 300, 1, 0); Title.Position = UDim2.new(0, 25, 0, 0); Title.BackgroundTransparency = 1
Title.Text = "CHINELÃO HUB PREMIUM"; Title.TextColor3 = COLORS.TEXT; Title.Font = Enum.Font.GothamBold; Title.TextSize = 18; Title.TextXAlignment = 0

-- CONTROLES (X / -)
local Controls = Instance.new("Frame", TopBar)
Controls.Size = UDim2.new(0, 100, 1, 0); Controls.Position = UDim2.new(1, -110, 0, 0); Controls.BackgroundTransparency = 1
local function createCtrl(txt, pos, col, cb)
    local b = Instance.new("TextButton", Controls)
    b.Size = UDim2.fromOffset(35, 35); b.Position = UDim2.new(0, pos, 0.5, -17); b.BackgroundColor3 = Color3.fromRGB(30, 35, 45)
    b.Text = txt; b.TextColor3 = COLORS.TEXT; b.Font = Enum.Font.GothamBold; Instance.new("UICorner", b).CornerRadius = UDim.new(0, 8)
    b.MouseButton1Click:Connect(cb)
end
createCtrl("-", 0, COLORS.ACCENT, function() Main.Visible = false; OpenBtn.Visible = true end)
createCtrl("X", 45, COLORS.HOVER_RED, function() sg:Destroy() end)
OpenBtn.MouseButton1Click:Connect(function() OpenBtn.Visible = false; Main.Visible = true end)

-- SIDEBAR
local Sidebar = Instance.new("Frame", Main)
Sidebar.Size = UDim2.new(0, 180, 1, -120); Sidebar.Position = UDim2.new(0, 0, 0, 60); Sidebar.BackgroundColor3 = COLORS.SIDEBAR; Sidebar.BackgroundTransparency = 0.6
Instance.new("UIListLayout", Sidebar).HorizontalAlignment = Enum.HorizontalAlignment.Center

local Container = Instance.new("Frame", Main)
Container.Size = UDim2.new(1, -210, 1, -80); Container.Position = UDim2.new(0, 195, 0, 65); Container.BackgroundTransparency = 1

local pages = {}
local function createPage(name)
    local p = Instance.new("ScrollingFrame", Container); p.Size = UDim2.new(1, 0, 1, 0); p.BackgroundTransparency = 1; p.Visible = false; p.ScrollBarThickness = 2; p.AutomaticCanvasSize = Enum.AutomaticSize.Y
    Instance.new("UIListLayout", p).Padding = UDim.new(0, 10); pages[name] = p; return p
end

local function createTab(name)
    local b = Instance.new("TextButton", Sidebar)
    b.Size = UDim2.new(0, 160, 0, 40); b.BackgroundColor3 = Color3.fromRGB(25, 30, 40); b.Text = name; b.TextColor3 = COLORS.TEXT; b.Font = Enum.Font.GothamBold; b.TextSize = 13; Instance.new("UICorner", b).CornerRadius = UDim.new(0, 6)
    b.MouseButton1Click:Connect(function() for _, v in pairs(pages) do v.Visible = false end; pages[name].Visible = true end)
end

local pPlayer = createPage("PLAYER"); pPlayer.Visible = true
local pFarm = createPage("FARM"); local pFly = createPage("FLY"); local pServers = createPage("SERVERS")
createTab("PLAYER"); createTab("FARM"); createTab("FLY"); createTab("SERVERS")

-- [[ COMPONENTES ]] --
local function createToggle(parent, text, callback)
    local card = Instance.new("Frame", parent); card.Size = UDim2.new(1, -10, 0, 50); card.BackgroundColor3 = COLORS.CARD_BG; Instance.new("UICorner", card)
    local l = Instance.new("TextLabel", card); l.Text = text; l.Size = UDim2.new(1, -60, 1, 0); l.Position = UDim2.new(0, 15, 0, 0); l.TextColor3 = COLORS.TEXT; l.Font = Enum.Font.GothamSemibold; l.BackgroundTransparency = 1; l.TextXAlignment = 0
    local btn = Instance.new("TextButton", card); btn.Size = UDim2.fromOffset(40, 20); btn.Position = UDim2.new(1, -50, 0.5, -10); btn.BackgroundColor3 = COLORS.TOGGLE_OFF; btn.Text = ""; Instance.new("UICorner", btn).CornerRadius = UDim.new(1,0)
    local dot = Instance.new("Frame", btn); dot.Size = UDim2.fromOffset(16, 16); dot.Position = UDim2.new(0, 2, 0.5, -8); dot.BackgroundColor3 = Color3.new(1,1,1); Instance.new("UICorner", dot).CornerRadius = UDim.new(1,0)
    local act = false
    btn.MouseButton1Click:Connect(function()
        act = not act
        dot:TweenPosition(act and UDim2.new(1, -18, 0.5, -8) or UDim2.new(0, 2, 0.5, -8), "Out", "Quad", 0.1)
        btn.BackgroundColor3 = act and COLORS.TOGGLE_ON or COLORS.TOGGLE_OFF
        callback(act)
    end)
end

local function createButton(parent, text, callback)
    local btn = Instance.new("TextButton", parent); btn.Size = UDim2.new(1, -10, 0, 45); btn.BackgroundColor3 = COLORS.CARD_BG; btn.Text = text; btn.TextColor3 = COLORS.ACCENT; btn.Font = Enum.Font.GothamBold; btn.TextSize = 14; Instance.new("UICorner", btn)
    btn.MouseButton1Click:Connect(callback)
end

-- [[ ABA PLAYER ]] --
createToggle(pPlayer, "Auto Purchase (Buy Items)", function(s) _G.AutoPurchase = s end)
createToggle(pPlayer, "WalkSpeed Hack", function(s) _G.WalkSpeedEnabled = s end)

-- [[ ABA FARM ]] --
local brainList = {"pipi potato", "tung tung tung", "sahur", "tim cheease", "lirililarila", "fluri flura", "cacto", "hipopotamo"}
-- Dropdown simplificado para economia de espaço
local drop = Instance.new("TextLabel", pFarm); drop.Text = "Selecione na lista de Farm"; drop.Size = UDim2.new(1,0,0,20); drop.TextColor3 = Color3.new(0.5,0.5,0.5); drop.BackgroundTransparency = 1
for _, n in pairs(brainList) do
    createToggle(pFarm, "Farm: "..n, function(s)
        if s then table.insert(_G.SelectedBrainrots, n) else
            for i, v in pairs(_G.SelectedBrainrots) do if v == n then table.remove(_G.SelectedBrainrots, i) end end
        end
    end)
end

-- [[ ABA FLY ]] --
createToggle(pFly, "Enable Fly (Teclas WASD)", function(s) _G.FlyEnabled = s end)
createButton(pFly, "Fly Speed: 50 (Default)", function() _G.FlySpeed = 50 end)
createButton(pFly, "Fly Speed: 150 (Fast)", function() _G.FlySpeed = 150 end)

-- [[ ABA SERVERS ]] --
createButton(pServers, "Server Hop (Mudar de Servidor)", function()
    local Servers = HttpService:JSONDecode(game:HttpGet("https://games.roblox.com/v1/games/"..game.PlaceId.."/servers/Public?sortOrder=Asc&limit=100"))
    for _, v in pairs(Servers.data) do
        if v.playing < v.maxPlayers and v.id ~= game.JobId then
            TeleportService:TeleportToPlaceInstance(game.PlaceId, v.id)
            break
        end
    end
end)
createButton(pServers, "Rejoin (Reconectar)", function()
    TeleportService:TeleportToPlaceInstance(game.PlaceId, game.JobId)
end)

-- [[ SISTEMAS ]] --
-- Loop WalkSpeed
task.spawn(function()
    while true do task.wait(0.1)
        if _G.WalkSpeedEnabled and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
            LocalPlayer.Character.Humanoid.WalkSpeed = _G.WalkSpeedValue
        end
    end
end)

-- Fly System
local BV = Instance.new("BodyVelocity")
local BG = Instance.new("BodyGyro")
task.spawn(function()
    while true do task.wait()
        if _G.FlyEnabled and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
            local HRP = LocalPlayer.Character.HumanoidRootPart
            BV.Parent = HRP; BV.MaxForce = Vector3.new(1e5, 1e5, 1e5); BV.Velocity = Vector3.new(0,0,0)
            BG.Parent = HRP; BG.MaxTorque = Vector3.new(1e5, 1e5, 1e5); BG.CFrame = workspace.CurrentCamera.CFrame
            
            local Cam = workspace.CurrentCamera.CFrame
            local moveDir = Vector3.new(0,0,0)
            if UserInputService:IsKeyDown(Enum.KeyCode.W) then moveDir = moveDir + Cam.LookVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.S) then moveDir = moveDir - Cam.LookVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.A) then moveDir = moveDir - Cam.RightVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.D) then moveDir = moveDir + Cam.RightVector end
            BV.Velocity = moveDir * _G.FlySpeed
        else
            BV.Parent = nil; BG.Parent = nil
        end
    end
end)

-- Arrastar
local function drag(g, t)
    local d, i, s, p; g.InputBegan:Connect(function(ev) if ev.UserInputType == Enum.UserInputType.MouseButton1 then d = true; s = ev.Position; p = t.Position end end)
    g.InputChanged:Connect(function(ev) if ev.UserInputType == Enum.UserInputType.MouseMovement then i = ev end end)
    UserInputService.InputChanged:Connect(function() if i and d then local delta = i.Position - s; t.Position = UDim2.new(p.X.Scale, p.X.Offset + delta.X, p.Y.Scale, p.Y.Offset + delta.Y) end end)
    UserInputService.InputEnded:Connect(function(ev) if ev.UserInputType == Enum.UserInputType.MouseButton1 then d = false end end)
end
drag(TopBar, Main); drag(OpenBtn, OpenBtn)

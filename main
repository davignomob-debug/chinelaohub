-- [[ L√ìGICA DE TROCA DE ABAS ]] --
btnRadar.MouseButton1Click:Connect(function()
    PageRadar.Visible = true
    PageServers.Visible = false
    btnRadar.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    btnServers.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
end)

btnServers.MouseButton1Click:Connect(function()
    PageRadar.Visible = false
    PageServers.Visible = true
    btnServers.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    btnRadar.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
end)

-- [[ L√ìGICA SERVER PREMIUM ]] --
bGen.MouseButton1Click:Connect(function()
    bGen.Text = "Searching Server..."
    local success, result = pcall(function()
        return HttpService:JSONDecode(game:HttpGet("https://games.roblox.com/v1/games/" .. game.PlaceId .. "/servers/Public?sortOrder=Asc&limit=100"))
    end)
    if success and result.data then
        for _, server in ipairs(result.data) do
            if server.playing < server.maxPlayers and server.id ~= game.JobId then
                TeleportService:TeleportToPlaceInstance(game.PlaceId, server.id)
                break
            end
        end
    else
        bGen.Text = "Error! Click again."
    end
end)

-- Draggable (Arrastar)
local function drag()
    local dragging, dragInput, dragStart, startPos
    Main.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = Main.Position
        end
    end)
    Main.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            Main.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    game:GetService("UserInputService").InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end
    end)
end
drag()

-- Bot√£o de Fechar
local close = Instance.new("TextButton", Main)
close.Size = UDim2.fromOffset(30, 30)
close.Position = UDim2.new(1, -35, 0, 5)
close.Text = "X"
close.TextColor3 = Color3.new(1,0,0)
close.BackgroundTransparency = 1
close.MouseButton1Click:Connect(function() sg:Destroy() end)

print("ü©¥ CHINELAOHUB TECH PERFECT STYLE LOADED!")

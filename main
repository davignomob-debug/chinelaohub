local Players = game:GetService("Players")
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")
local CoreGui = game:GetService("CoreGui")
local TweenService = game:GetService("TweenService")

local LocalPlayer = Players.LocalPlayer

-- [[ FUN√á√ÉO PARA UI PROTEGIDA ]] --
local function GetSafeGui()
    if gethui then return gethui() end
    if CoreGui then return CoreGui end
    return LocalPlayer:WaitForChild("PlayerGui")
end

local parentGui = GetSafeGui()

-- [[ CORES ]] --
local COLORS = {
    BG = Color3.fromRGB(5, 5, 10),
    SIDEBAR = Color3.fromRGB(10, 15, 25),
    CARD = Color3.fromRGB(15, 20, 35),
    ACCENT = Color3.fromRGB(56, 189, 248),
    TEXT = Color3.fromRGB(255, 255, 255),
    TOGGLE_ON = Color3.fromRGB(56, 189, 248),
    TOGGLE_OFF = Color3.fromRGB(40, 50, 70)
}

-- [[ VARI√ÅVEIS DE ESTADO ]] --
local AutoLoadEnabled = false

-- [[ UI PRINCIPAL ]] --
local sg = Instance.new("ScreenGui")
sg.Name = "ChinelaoPremium_HelperUpdate"
sg.ResetOnSpawn = false
sg.Parent = parentGui

local Main = Instance.new("Frame", sg)
Main.Size = UDim2.fromOffset(580, 350)
Main.Position = UDim2.new(0.5, -290, 0.5, -175)
Main.BackgroundColor3 = COLORS.BG
Main.BorderSizePixel = 0
Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 12)

-- Barra Superior
local Title = Instance.new("TextLabel", Main)
Title.Size = UDim2.new(0, 200, 0, 40)
Title.Position = UDim2.new(0, 15, 0, 0)
Title.Text = "CHINELAO PREMIUM"
Title.TextColor3 = COLORS.ACCENT
Title.Font = Enum.Font.GothamBold
Title.TextSize = 14
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

-- Sidebar
local Sidebar = Instance.new("Frame", Main)
Sidebar.Size = UDim2.new(0, 130, 1, -50)
Sidebar.Position = UDim2.new(0, 10, 0, 40)
Sidebar.BackgroundTransparency = 1
local Layout = Instance.new("UIListLayout", Sidebar)
Layout.Padding = UDim.new(0, 8)

-- Container de P√°ginas
local Container = Instance.new("Frame", Main)
Container.Size = UDim2.new(1, -160, 1, -50)
Container.Position = UDim2.new(0, 150, 0, 40)
Container.BackgroundTransparency = 1

local function createPage()
    local p = Instance.new("Frame", Container)
    p.Size = UDim2.new(1, 0, 1, 0)
    p.BackgroundTransparency = 1
    p.Visible = false
    return p
end

local PagePlayer = createPage()
local PageServers = createPage()
local PageFly = createPage()
local PageHelper = createPage()
PageHelper.Visible = true -- Come√ßar na Helper para voc√™ ver o novo visual

-- Bot√µes Sidebar
local function createTabBtn(name, page)
    local btn = Instance.new("TextButton", Sidebar)
    btn.Size = UDim2.new(1, 0, 0, 35)
    btn.BackgroundColor3 = COLORS.SIDEBAR
    btn.Text = name
    btn.TextColor3 = COLORS.TEXT
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 12
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    
    btn.MouseButton1Click:Connect(function()
        for _, p in pairs(Container:GetChildren()) do p.Visible = false end
        page.Visible = true
    end)
    return btn
end

createTabBtn("PLAYER", PagePlayer)
createTabBtn("SERVERS", PageServers)
createTabBtn("FLY", PageFly)
local btnHelper = createTabBtn("HELPER", PageHelper)
btnHelper.BackgroundColor3 = COLORS.ACCENT
btnHelper.TextColor3 = COLORS.BG

-- [[ CONTE√öDO ABA HELPER (IGUAL √Ä IMAGEM) ]] --
local HelperTitle = Instance.new("TextLabel", PageHelper)

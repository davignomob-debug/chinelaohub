-- Toggle (Interruptor)
local ToggleBG = Instance.new("TextButton", AutoLoadCard)
ToggleBG.Size = UDim2.fromOffset(45, 22)
ToggleBG.Position = UDim2.new(1, -60, 0.5, -11)
ToggleBG.BackgroundColor3 = COLORS.TOGGLE_OFF
ToggleBG.Text = ""
Instance.new("UICorner", ToggleBG).CornerRadius = UDim.new(1, 0)

local ToggleCircle = Instance.new("Frame", ToggleBG)
ToggleCircle.Size = UDim2.fromOffset(18, 18)
ToggleCircle.Position = UDim2.new(0, 2, 0.5, -9)
ToggleCircle.BackgroundColor3 = COLORS.TEXT
Instance.new("UICorner", ToggleCircle).CornerRadius = UDim.new(1, 0)

ToggleBG.MouseButton1Click:Connect(function()
    AutoLoadEnabled = not AutoLoadEnabled
    local targetPos = AutoLoadEnabled and UDim2.new(1, -20, 0.5, -9) or UDim2.new(0, 2, 0.5, -9)
    local targetColor = AutoLoadEnabled and COLORS.TOGGLE_ON or COLORS.TOGGLE_OFF
    
    TweenService:Create(ToggleCircle, TweenInfo.new(0.2), {Position = targetPos}):Play()
    TweenService:Create(ToggleBG, TweenInfo.new(0.2), {BackgroundColor3 = targetColor}):Play()
    
    if AutoLoadEnabled then
        print("Auto Load Ativado")
    end
end)

-- Bot√£o Run Auto
local RunAutoBtn = Instance.new("TextButton", PageHelper)
RunAutoBtn.Size = UDim2.new(1, -10, 0, 50)
RunAutoBtn.Position = UDim2.new(0, 0, 0, 110)

local Players = game:GetService("Players")
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")
local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")

local LocalPlayer = Players.LocalPlayer

-- Fun√ß√£o para UI Protegida
local function GetSafeGui()
    if gethui then return gethui() end
    if CoreGui then return CoreGui end
    return LocalPlayer:WaitForChild("PlayerGui")
end

local parentGui = GetSafeGui()

-- Configura√ß√µes de Estado
local RadarActive = true
local CurrentID = "9114283110"

-- [[ UI PRINCIPAL ]] --
local sg = Instance.new("ScreenGui")
sg.Name = "ChinelaoHub_TechPerfect"
sg.ResetOnSpawn = false
sg.Parent = parentGui

-- Frame de Fundo (Main)
local Main = Instance.new("Frame", sg)
Main.Size = UDim2.fromOffset(550, 350)
Main.Position = UDim2.new(0.5, -275, 0.5, -175)
Main.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
Main.BorderSizePixel = 0
Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 8)

-- Borda Neon Verde (conforme a print)
local MainStroke = Instance.new("UIStroke", Main)
MainStroke.Thickness = 2
MainStroke.Color = Color3.fromRGB(0, 255, 0)
MainStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

-- [[ SIDEBAR (Lateral Esquerda) ]] --
local Sidebar = Instance.new("Frame", Main)
Sidebar.Size = UDim2.new(0, 150, 1, -40)
Sidebar.Position = UDim2.new(0, 10, 0, 35)
Sidebar.BackgroundTransparency = 1

local UIList = Instance.new("UIListLayout", Sidebar)
UIList.Padding = UDim.new(0, 8)

-- Bot√µes da Sidebar
local function createTabBtn(name)
    local btn = Instance.new("TextButton", Sidebar)
    btn.Size = UDim2.new(1, 0, 0, 35)
    btn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    btn.Text = name
    btn.TextColor3 = Color3.fromRGB(200, 200, 200)
    btn.Font = Enum.Font.GothamSemibold
    btn.TextSize = 14
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    return btn
end

local btnRadar = createTabBtn("Radar")
local btnServers = createTabBtn("Servers")


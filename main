AutoLoadCard.Position = UDim2.new(0, 0, 0, 40)
AutoLoadCard.BackgroundColor3 = COLORS.CARD
Instance.new("UICorner", AutoLoadCard)

local AutoLoadText = Instance.new("TextLabel", AutoLoadCard)
AutoLoadText.Text = "Auto Load Script"
AutoLoadText.Size = UDim2.new(0, 200, 1, 0)
AutoLoadText.Position = UDim2.new(0, 15, 0, 0)
AutoLoadText.TextColor3 = COLORS.TEXT
AutoLoadText.Font = Enum.Font.GothamSemibold

-- [[ NAVEGA√á√ÉO ]] --
local function openTab(page, btn)
    pPlayer.Visible = false; pServers.Visible = false; pFly.Visible = false; pHelper.Visible = false
    btnPlayer.BackgroundColor3 = COLORS.BTN; btnServers.BackgroundColor3 = COLORS.BTN; btnFly.BackgroundColor3 = COLORS.BTN; btnHelper.BackgroundColor3 = COLORS.BTN
    page.Visible = true
    btn.BackgroundColor3 = COLORS.ACCENT
    btn.TextColor3 = COLORS.BG
end

btnPlayer.MouseButton1Click:Connect(function() openTab(pPlayer, btnPlayer) end)
btnServers.MouseButton1Click:Connect(function() openTab(pServers, btnServers) end)
btnFly.MouseButton1Click:Connect(function() openTab(pFly, btnFly) end)
btnHelper.MouseButton1Click:Connect(function() openTab(pHelper, btnHelper) end)

-- [[ DRAGGABLE ]] --
local function drag(f)
    local d, i, s, sp
    f.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then d = true; s = input.Position; sp = f.Position end
    end)
    f.InputChanged:Connect(function(input)
        if d and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - s
            f.Position = UDim2.new(sp.X.Scale, sp.X.Offset + delta.X, sp.Y.Scale, sp.Y.Offset + delta.Y)
        end
    end)
    game:GetService("UserInputService").InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then d = false end
    end)
end
drag(Main)
drag(OpenBtn)

local Players = game:GetService("Players")
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")
local CoreGui = game:GetService("CoreGui")
local UserInputService = game:GetService("UserInputService")
local LocalPlayer = Players.LocalPlayer

local function GetSafeGui()
    if gethui then return gethui() end
    if CoreGui then return CoreGui end
    return LocalPlayer:WaitForChild("PlayerGui")
end

local parentGui = GetSafeGui()

local COLORS = {
    BG = Color3.fromRGB(13, 17, 23),
    SIDEBAR = Color3.fromRGB(10, 12, 16),
    STROKE = Color3.fromRGB(56, 189, 248),
    TEXT = Color3.fromRGB(241, 245, 249),
    ACCENT = Color3.fromRGB(34, 211, 238),
    CARD_BG = Color3.fromRGB(17, 22, 28),
    TOGGLE_ON = Color3.fromRGB(34, 211, 238),
    TOGGLE_OFF = Color3.fromRGB(45, 55, 72),
    HOVER_RED = Color3.fromRGB(255, 60, 60),
    NEON_GREEN = Color3.fromRGB(0, 255, 0) -- Cor do novo Slider
}

if parentGui:FindFirstChild("ChinelaoPremium_Final_V11") then
    parentGui:FindFirstChild("ChinelaoPremium_Final_V11"):Destroy()
end

local sg = Instance.new("ScreenGui")
sg.Name = "ChinelaoPremium_Final_V11"
sg.ResetOnSpawn = false
sg.Parent = parentGui

-- [[ BOTÃO ABRIR ]] --
local OpenBtn = Instance.new("ImageButton", sg)
OpenBtn.Size = UDim2.fromOffset(65, 65)
OpenBtn.Position = UDim2.new(0, 20, 0.5, 0)
OpenBtn.BackgroundTransparency = 1
OpenBtn.Visible = false
OpenBtn.ZIndex = 100
OpenBtn.Image = "rbxassetid://131109000100412"
OpenBtn.ImageColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", OpenBtn).CornerRadius = UDim.new(0, 12)
local OpenStroke = Instance.new("UIStroke", OpenBtn)
OpenStroke.Color = COLORS.ACCENT; OpenStroke.Thickness = 2

-- [[ FRAME PRINCIPAL ]] --
local Main = Instance.new("Frame", sg)
Main.AnchorPoint = Vector2.new(0.5, 0.5)
Main.Size = UDim2.fromOffset(720, 480)
Main.Position = UDim2.new(0.5, 0, 0.5, 0)
Main.BackgroundColor3 = COLORS.BG
Main.ZIndex = 10
Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 12)
Instance.new("UIStroke", Main).Color = COLORS.STROKE

-- TOP BAR
local TopBar = Instance.new("Frame", Main)
TopBar.Size = UDim2.new(1, 0, 0, 50); TopBar.BackgroundTransparency = 1; TopBar.ZIndex = 11

local Title = Instance.new("TextLabel", TopBar)
Title.Size = UDim2.new(0, 300, 1, 0); Title.Position = UDim2.new(0, 25, 0, 0); Title.BackgroundTransparency = 1
Title.Text = "CHINELÃO HUB"; Title.TextColor3 = COLORS.TEXT; Title.Font = Enum.Font.GothamBold; Title.TextSize = 18; Title.TextXAlignment = 0; Title.ZIndex = 12

-- BOTÕES CONTROLE
local Controls = Instance.new("Frame", TopBar)
Controls.Size = UDim2.new(0, 100, 1, 0); Controls.Position = UDim2.new(1, -110, 0, 0); Controls.BackgroundTransparency = 1

local function createControlBtn(txt, pos, hoverColor, callback)
    local b = Instance.new("TextButton", Controls)
    b.Size = UDim2.fromOffset(35, 35); b.Position = UDim2.new(0, pos, 0.5, -17); b.BackgroundColor3 = Color3.fromRGB(30, 35, 45)
    b.Text = txt; b.TextColor3 = COLORS.TEXT; b.Font = Enum.Font.GothamBold; b.TextSize = 16; b.ZIndex = 15; Instance.new("UICorner", b).CornerRadius = UDim.new(0, 8)
    b.MouseEnter:Connect(function() b.BackgroundColor3 = hoverColor end)
    b.MouseLeave:Connect(function() b.BackgroundColor3 = Color3.fromRGB(30, 35, 45) end)
    b.MouseButton1Click:Connect(callback)
end

createControlBtn("-", 0, COLORS.ACCENT, function() Main.Visible = false; OpenBtn.Visible = true end)
createControlBtn("X", 45, COLORS.HOVER_RED, function() sg:Destroy() end)
OpenBtn.MouseButton1Click:Connect(function() OpenBtn.Visible = false; Main.Visible = true end)

-- SIDEBAR E PERFIL (Mantidos conforme V11)
local Sidebar = Instance.new("Frame", Main)
Sidebar.Size = UDim2.new(0, 180, 1, -120); Sidebar.Position = UDim2.new(0, 0, 0, 60); Sidebar.BackgroundColor3 = COLORS.SIDEBAR; Sidebar.BackgroundTransparency = 0.6; Sidebar.ZIndex = 11
Instance.new("UIListLayout", Sidebar).HorizontalAlignment = Enum.HorizontalAlignment.Center

-- CONTAINER
local Container = Instance.new("Frame", Main)
Container.Size = UDim2.new(1, -210, 1, -80); Container.Position = UDim2.new(0, 195, 0, 65); Container.BackgroundTransparency = 1; Container.ZIndex = 11

local pages = {}
local function createPage(name)
    local p = Instance.new("ScrollingFrame", Container); p.Size = UDim2.new(1, 0, 1, 0); p.BackgroundTransparency = 1; p.Visible = false; p.ScrollBarThickness = 3; p.ZIndex = 15; p.AutomaticCanvasSize = Enum.AutomaticSize.Y
    Instance.new("UIListLayout", p).Padding = UDim.new(0, 12); pages[name] = p; return p
end

local pPlayer = createPage("PLAYER"); pPlayer.Visible = true
local pFly = createPage("FLY"); local pServer = createPage("SERVERS")

local function createTab(name)
    local b = Instance.new("TextButton", Sidebar)
    b.Size = UDim2.new(0, 160, 0, 42); b.BackgroundColor3 = Color3.fromRGB(25, 30, 40); b.Text = name; b.TextColor3 = COLORS.TEXT; b.Font = Enum.Font.GothamBold; b.TextSize = 14; b.ZIndex = 16
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 8)
    b.MouseButton1Click:Connect(function() for _, v in pairs(pages) do v.Visible = false end; pages[name].Visible = true end)
end
createTab("PLAYER"); createTab("FLY"); createTab("SERVERS")

-- [[ NOVO COMPONENTE: SLIDER (ESTILO IMAGEM) ]] --
local function createSlider(parent, text, min, max, callback)
    local card = Instance.new("Frame", parent)
    card.Size = UDim2.new(1, -10, 0, 85); card.BackgroundColor3 = COLORS.CARD_BG; card.ZIndex = 16
    Instance.new("UICorner", card).CornerRadius = UDim.new(0, 8)
    
    local title = Instance.new("TextLabel", card)
    title.Text = "Speed Modifier"; title.Size = UDim2.new(0, 200, 0, 20); title.Position = UDim2.new(0, 15, 0, 8)
    title.TextColor3 = COLORS.NEON_GREEN; title.Font = Enum.Font.GothamBold; title.TextSize = 14; title.BackgroundTransparency = 1; title.TextXAlignment = 0; title.ZIndex = 17

    local name = Instance.new("TextLabel", card)
    name.Text = text; name.Size = UDim2.new(0, 200, 0, 20); name.Position = UDim2.new(0, 15, 0, 30)
    name.TextColor3 = COLORS.TEXT; name.Font = Enum.Font.GothamSemibold; name.TextSize = 14; name.BackgroundTransparency = 1; name.TextXAlignment = 0; name.ZIndex = 17

    local valueLabel = Instance.new("TextLabel", card)
    valueLabel.Text = "16 speed"; valueLabel.Size = UDim2.new(0, 100, 0, 20); valueLabel.Position = UDim2.new(1, -115, 0, 30)
    valueLabel.TextColor3 = COLORS.NEON_GREEN; valueLabel.Font = Enum.Font.GothamBold; valueLabel.TextSize = 14; valueLabel.BackgroundTransparency = 1; valueLabel.TextXAlignment = 2; valueLabel.ZIndex = 17

    local sliderBg = Instance.new("Frame", card)
    sliderBg.Size = UDim2.new(1, -30, 0, 4); sliderBg.Position = UDim2.new(0, 15, 0, 55); sliderBg.BackgroundColor3 = Color3.fromRGB(45, 55, 72); sliderBg.ZIndex = 17
    Instance.new("UICorner", sliderBg)

    local sliderFill = Instance.new("Frame", sliderBg)
    sliderFill.Size = UDim2.new(0, 0, 1, 0); sliderFill.BackgroundColor3 = COLORS.NEON_GREEN; sliderFill.ZIndex = 18
    Instance.new("UICorner", sliderFill)

    local button = Instance.new("TextButton", sliderBg)
    button.Size = UDim2.fromOffset(16, 16); button.Position = UDim2.new(0, -8, 0.5, -8); button.BackgroundColor3 = Color3.new(1,1,1); button.Text = ""; button.ZIndex = 19
    Instance.new("UICorner", button).CornerRadius = UDim.new(1, 0)
    Instance.new("UIStroke", button).Thickness = 2

    local desc = Instance.new("TextLabel", card)
    desc.Text = "Speed changer isn't that so tuff?"; desc.Size = UDim2.new(1, 0, 0, 20); desc.Position = UDim2.new(0, 15, 0, 65)
    desc.TextColor3 = Color3.fromRGB(150, 150, 150); desc.Font = Enum.Font.GothamMedium; desc.TextSize = 12; desc.BackgroundTransparency = 1; desc.TextXAlignment = 0; desc.ZIndex = 17

    local dragging = false
    local function update()
        local inputPos = UserInputService:GetMouseLocation().X
        local sliderPos = sliderBg.AbsolutePosition.X
        local sliderWidth = sliderBg.AbsoluteSize.X
        local percent = math.clamp((inputPos - sliderPos) / sliderWidth, 0, 1)
        
        sliderFill.Size = UDim2.new(percent, 0, 1, 0)
        button.Position = UDim2.new(percent, -8, 0.5, -8)
        
        local val = math.floor(min + (max - min) * percent)
        valueLabel.Text = val .. " speed"
        callback(val)
    end

    button.InputBegan:Connect(function(input) if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = true end end)
    UserInputService.InputEnded:Connect(function(input) if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end end)
    UserInputService.InputChanged:Connect(function(input) if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then update() end end)
end

-- [[ COMPONENTE TOGGLE ]] --
local function createToggle(parent, text, callback)
    local card = Instance.new("Frame", parent); card.Size = UDim2.new(1, -10, 0, 55); card.BackgroundColor3 = COLORS.CARD_BG; card.ZIndex = 16; Instance.new("UICorner", card).CornerRadius = UDim.new(0, 8)
    local l = Instance.new("TextLabel", card); l.Text = text; l.Size = UDim2.new(1, -70, 1, 0); l.Position = UDim2.new(0, 18, 0, 0); l.TextColor3 = COLORS.TEXT; l.Font = Enum.Font.GothamSemibold; l.TextSize = 15; l.BackgroundTransparency = 1; l.TextXAlignment = 0; l.ZIndex = 17
    local btn = Instance.new("TextButton", card); btn.Size = UDim2.fromOffset(45, 24); btn.Position = UDim2.new(1, -60, 0.5, -12); btn.BackgroundColor3 = COLORS.TOGGLE_OFF; btn.Text = ""; btn.ZIndex = 17; Instance.new("UICorner", btn).CornerRadius = UDim.new(1, 0)
    local dot = Instance.new("Frame", btn); dot.Size = UDim2.fromOffset(18, 18); dot.Position = UDim2.new(0, 3, 0.5, -9); dot.BackgroundColor3 = Color3.new(1,1,1); dot.ZIndex = 18; Instance.new("UICorner", dot).CornerRadius = UDim.new(1,0)
    local act = false
    btn.MouseButton1Click:Connect(function()
        act = not act
        dot:TweenPosition(act and UDim2.new(1, -21, 0.5, -9) or UDim2.new(0, 3, 0.5, -9), "Out", "Quad", 0.15, true)
        btn.BackgroundColor3 = act and COLORS.TOGGLE_ON or COLORS.TOGGLE_OFF
        callback(act)
    end)
end

-- [[ AÇÕES ]] --
createToggle(pPlayer, "Auto Purchase", function(s) _G.AutoPurchase = s end)

-- ADICIONANDO O SLIDER DE VELOCIDADE (32 a 300)
createSlider(pPlayer, "Walk Speed", 32, 300, function(v)
    if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
        LocalPlayer.Character.Humanoid.WalkSpeed = v
    end
end)

createToggle(pFly, "Enable Fly GUI V3", function(s) if s then loadstring(game:HttpGet("https://rawscripts.net/raw/Universal-Script-FLY-GUI-V3-19840"))() end end)
createToggle(pServer, "Rejoin Server", function(s) if s then TeleportService:Teleport(game.PlaceId, LocalPlayer) end end)

-- LÓGICA AUTO PURCHASE
_G.AutoPurchase = false
task.spawn(function()
    while true do
        task.wait(0.1)
        if _G.AutoPurchase then
            pcall(function()
                for _, v in pairs(game:GetDescendants()) do
                    if v:IsA("ProximityPrompt") then
                        v.HoldDuration = 0
                        if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
                            local dist = (LocalPlayer.Character.HumanoidRootPart.Position - v.Parent.Position).Magnitude
                            if dist < v.MaxActivationDistance then fireproximityprompt(v) end
                        end
                    end
                end
            end)
        end
    end
end)

-- DRAG
local function makeDraggable(gui, target)
    local target = target or gui
    local dragging, dragInput, dragStart, startPos
    gui.InputBegan:Connect(function(input) if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = true; dragStart = input.Position; startPos = target.Position end end)
    gui.InputChanged:Connect(function(input) if input.UserInputType == Enum.UserInputType.MouseMovement then dragInput = input end end)
    UserInputService.InputChanged:Connect(function(input) if input == dragInput and dragging then local delta = input.Position - dragStart; target.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y) end end)
    UserInputService.InputEnded:Connect(function(input) if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end end)
end
makeDraggable(TopBar, Main); makeDraggable(OpenBtn)

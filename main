local Players = game:GetService("Players")
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")
local CoreGui = game:GetService("CoreGui")

local LocalPlayer = Players.LocalPlayer

-- [[ FUN√á√ÉO PARA UI PROTEGIDA ]] --
local function GetSafeGui()
    if gethui then return gethui() end
    if CoreGui then return CoreGui end
    return LocalPlayer:WaitForChild("PlayerGui")
end

local parentGui = GetSafeGui()

-- [[ CORES CHILLI HUB ]] --
local COLORS = {
    BG = Color3.fromRGB(16, 24, 39),
    GRAD_1 = Color3.fromRGB(12, 18, 32),
    GRAD_2 = Color3.fromRGB(21, 30, 47),
    GRAD_3 = Color3.fromRGB(10, 82, 120),
    STROKE = Color3.fromRGB(56, 189, 248),
    TEXT = Color3.fromRGB(241, 245, 249),
    ACCENT = Color3.fromRGB(34, 211, 238),
    BTN = Color3.fromRGB(30, 41, 59)
}

-- [[ UI PRINCIPAL ]] --
local sg = Instance.new("ScreenGui")
sg.Name = "ChinelaoPremium_UI"
sg.ResetOnSpawn = false
sg.Parent = parentGui

local Main = Instance.new("Frame", sg)
Main.Size = UDim2.fromOffset(550, 350)
Main.Position = UDim2.new(0.5, -275, 0.5, -175)
Main.BackgroundColor3 = COLORS.BG
Main.BorderSizePixel = 0
Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 20)

-- Gradiente Chilli Estilo
local BgGrad = Instance.new("UIGradient", Main)
BgGrad.Rotation = 35
BgGrad.Color = ColorSequence.new({
    ColorSequenceKeypoint.new(0.00, COLORS.GRAD_1),
    ColorSequenceKeypoint.new(0.55, COLORS.GRAD_2),
    ColorSequenceKeypoint.new(1.00, COLORS.GRAD_3),
})

local Glow = Instance.new("UIStroke", Main)
Glow.Thickness = 2
Glow.Color = COLORS.STROKE
Glow.Transparency = 0.2

-- [[ SIDEBAR ]] --
local Sidebar = Instance.new("Frame", Main)
Sidebar.Size = UDim2.new(0, 140, 1, -60)
Sidebar.Position = UDim2.new(0, 15, 0, 45)
Sidebar.BackgroundTransparency = 1
local UIList = Instance.new("UIListLayout", Sidebar)
UIList.Padding = UDim.new(0, 10)

-- [[ CONTAINER DE P√ÅGINAS ]] --
local Container = Instance.new("Frame", Main)
Container.Size = UDim2.new(1, -185, 1, -65)
Container.Position = UDim2.new(0, 170, 0, 50)
Container.BackgroundTransparency = 1

local function createPage()
    local p = Instance.new("Frame", Container)
    p.Size = UDim2.new(1, 0, 1, 0)
    p.BackgroundTransparency = 1
    p.Visible = false
    return p
end

local function createTabBtn(name)
    local b = Instance.new("TextButton", Sidebar)
    b.Size = UDim2.new(1, 0, 0, 38)
    b.BackgroundColor3 = COLORS.BTN
    b.Text = name
    b.TextColor3 = COLORS.TEXT
    b.Font = Enum.Font.GothamBold
    b.TextSize = 13
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 10)
    Instance.new("UIStroke", b).Color = COLORS.STROKE
    return b
end

local PagePlayer = createPage()
local PageServers = createPage()
local PageFly = createPage()

local btnPlayer = createTabBtn("PLAYER")
local btnServers = createTabBtn("SERVERS")
local btnFly = createTabBtn("FLY")

-- [[ ABA PLAYER: INSTANT GRAB ]] --
PagePlayer.Visible = true
local GrabBtn = Instance.new("TextButton", PagePlayer)
GrabBtn.Size = UDim2.new(1, 0, 0, 55)
GrabBtn.BackgroundColor3 = COLORS.ACCENT
GrabBtn.Text = "INSTANT GRAB BRAINROT"
GrabBtn.Font = Enum.Font.GothamBlack
GrabBtn.TextColor3 = COLORS.BG
Instance.new("UICorner", GrabBtn)

GrabBtn.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://pastefy.app/CMe2Qy23/raw"))()
end)

-- [[ ABA SERVERS: PREMIUM HOP ]] --
local ServerBtn = Instance.new("TextButton", PageServers)
ServerBtn.Size = UDim2.new(1, 0, 0, 55)
ServerBtn.BackgroundColor3 = Color3.fromRGB(140, 225, 0)
ServerBtn.Text = "SERVER PREMIUM (HOP)"
ServerBtn.Font = Enum.Font.GothamBlack
ServerBtn.TextColor3 = COLORS.BG
Instance.new("UICorner", ServerBtn)

ServerBtn.MouseButton1Click:Connect(function()
    local success, result = pcall(function()
        return HttpService:JSONDecode(game:HttpGet("https://games.roblox.com/v1/games/" .. game.PlaceId .. "/servers/Public?sortOrder=Asc&limit=100"))
    end)
    if success and result.data then
        for _, s in ipairs(result.data) do
            if s.playing < s.maxPlayers and s.id ~= game.JobId then
                TeleportService:TeleportToPlaceInstance(game.PlaceId, s.id)
                break
            end
        end
    end
end)

-- [[ ABA FLY: UNIVERSAL FLY ]] --
local FlyExecBtn = Instance.new("TextButton", PageFly)
FlyExecBtn.Size = UDim2.new(1, 0, 0, 55)
FlyExecBtn.BackgroundColor3 = COLORS.ACCENT
FlyExecBtn.Text = "EXECUTAR FLY GUI V3"
FlyExecBtn.Font = Enum.Font.GothamBlack
FlyExecBtn.TextColor3 = COLORS.BG
Instance.new("UICorner", FlyExecBtn)

FlyExecBtn.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://rawscripts.net/raw/Universal-Script-FLY-GUI-V3-19840"))()
end)

-- [[ L√ìGICA DE NAVEGA√á√ÉO ]] --
local function openTab(page, btn)
    PagePlayer.Visible = false; PageServers.Visible = false; PageFly.Visible = false
    btnPlayer.BackgroundColor3 = COLORS.BTN; btnServers.BackgroundColor3 = COLORS.BTN; btnFly.BackgroundColor3 = COLORS.BTN
    btnPlayer.TextColor3 = COLORS.TEXT; btnServers.TextColor3 = COLORS.TEXT; btnFly.TextColor3 = COLORS.TEXT
    
    page.Visible = true
    btn.BackgroundColor3 = COLORS.ACCENT
    btn.TextColor3 = COLORS.BG
end

btnPlayer.MouseButton1Click:Connect(function() openTab(PagePlayer, btnPlayer) end)
btnServers.MouseButton1Click:Connect(function() openTab(PageServers, btnServers) end)
btnFly.MouseButton1Click:Connect(function() openTab(PageFly, btnFly) end)

-- T√çTULO E BOT√ÉO FECHAR
local Title = Instance.new("TextLabel", Main)
Title.Size = UDim2.new(0, 300, 0, 40)
Title.Position = UDim2.new(0, 20, 0, 5)
Title.Text = "CHINELAO PREMIUM"
Title.TextColor3 = COLORS.TEXT
Title.Font = Enum.Font.GothamBold
Title.TextSize = 18
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

local Close = Instance.new("TextButton", Main)
Close.Size = UDim2.fromOffset(30, 30)
Close.Position = UDim2.new(1, -40, 0, 10)
Close.Text = "X"
Close.TextColor3 = Color3.new(1,0,0)
Close.BackgroundTransparency = 1
Close.MouseButton1Click:Connect(function() sg:Destroy() end)

-- Arrastar (Draggable)
local function drag()
    local dragging, dragInput, dragStart, startPos
    Main.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true; dragStart = input.Position; startPos = Main.Position
        end
    end)
    Main.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            Main.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    game:GetService("UserInputService").InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end
    end)
end
drag()

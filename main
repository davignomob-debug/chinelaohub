local Players = game:GetService("Players")
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")
local CoreGui = game:GetService("CoreGui")
local UserInputService = game:GetService("UserInputService")
local LocalPlayer = Players.LocalPlayer

local function GetSafeGui()
    if gethui then return gethui() end
    if CoreGui then return CoreGui end
    return LocalPlayer:WaitForChild("PlayerGui")
end

local parentGui = GetSafeGui()

local COLORS = {
    BG = Color3.fromRGB(13, 17, 23),
    SIDEBAR = Color3.fromRGB(10, 12, 16),
    STROKE = Color3.fromRGB(34, 211, 238), -- Azul Ciano
    TEXT = Color3.fromRGB(241, 245, 249),
    ACCENT = Color3.fromRGB(34, 211, 238), -- Azul Ciano
    CARD_BG = Color3.fromRGB(17, 22, 28),
    TOGGLE_ON = Color3.fromRGB(34, 211, 238),
    TOGGLE_OFF = Color3.fromRGB(45, 55, 72),
    HOVER_RED = Color3.fromRGB(255, 60, 60)
}

-- Limpeza de versão anterior
if parentGui:FindFirstChild("ChinelaoHub_V18") then
    parentGui:FindFirstChild("ChinelaoHub_V18"):Destroy()
end

local sg = Instance.new("ScreenGui")
sg.Name = "ChinelaoHub_V18"
sg.ResetOnSpawn = false
sg.Parent = parentGui

-- [[ SISTEMA DE ARRASTE ]] --
local function Drag(gui, target)
    local target = target or gui
    local dragging, dragInput, dragStart, startPos
    gui.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true; dragStart = input.Position; startPos = target.Position
        end
    end)
    gui.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then dragInput = input end
    end)
    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            local delta = input.Position - dragStart
            target.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    UserInputService.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then dragging = false end
    end)
end

-- [[ BOTÃO MINIMIZADO (LOGOMARCA) ]] --
local OpenBtn = Instance.new("Frame", sg)
OpenBtn.Size = UDim2.fromOffset(70, 70)
OpenBtn.Position = UDim2.new(0, 30, 0.5, -35)
OpenBtn.BackgroundColor3 = COLORS.BG
OpenBtn.Visible = false
Instance.new("UICorner", OpenBtn).CornerRadius = UDim.new(0, 12)
local OpenStroke = Instance.new("UIStroke", OpenBtn)
OpenStroke.Color = COLORS.ACCENT; OpenStroke.Thickness = 2

local LogoImg = Instance.new("ImageLabel", OpenBtn)
LogoImg.Size = UDim2.new(1, 0, 1, 0)
LogoImg.BackgroundTransparency = 1
-- SUBSTITUA PELO ID DA IMAGEM QUE VOCÊ SALVOU:
LogoImg.Image = "rbxassetid://COLOQUE_O_ID_AQUI" 

local OpenTrigger = Instance.new("TextButton", OpenBtn)
OpenTrigger.Size = UDim2.new(1, 0, 1, 0); OpenTrigger.BackgroundTransparency = 1; OpenTrigger.Text = ""
Drag(OpenTrigger, OpenBtn)

-- [[ FRAME PRINCIPAL (720x480) ]] --
local Main = Instance.new("Frame", sg)
Main.AnchorPoint = Vector2.new(0.5, 0.5); Main.Size = UDim2.fromOffset(720, 480)
Main.Position = UDim2.new(0.5, 0, 0.5, 0); Main.BackgroundColor3 = COLORS.BG
Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 12)
Instance.new("UIStroke", Main).Color = COLORS.STROKE
Drag(Main)

-- BARRA SUPERIOR
local TopBar = Instance.new("Frame", Main)
TopBar.Size = UDim2.new(1, 0, 0, 55); TopBar.BackgroundTransparency = 1
Drag(TopBar, Main)

local Title = Instance.new("TextLabel", TopBar)
Title.Size = UDim2.new(0, 300, 1, 0); Title.Position = UDim2.new(0, 25, 0, 0); Title.BackgroundTransparency = 1
Title.Text = "CHINELÃO HUB"; Title.TextColor3 = COLORS.TEXT; Title.Font = Enum.Font.GothamBold; Title.TextSize = 18; Title.TextXAlignment = 0

local Controls = Instance.new("Frame", TopBar)
Controls.Size = UDim2.new(0, 100, 1, 0); Controls.Position = UDim2.new(1, -100, 0, 0); Controls.BackgroundTransparency = 1

local function createControlBtn(txt, pos, hoverColor, callback)
    local b = Instance.new("TextButton", Controls)
    b.Size = UDim2.fromOffset(35, 35); b.Position = UDim2.new(0, pos, 0.5, -17)
    b.BackgroundColor3 = Color3.fromRGB(25, 30, 40); b.Text = txt; b.TextColor3 = COLORS.TEXT; b.Font = Enum.Font.GothamBold; b.TextSize = 18
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 8)
    b.MouseEnter:Connect(function() b.BackgroundColor3 = hoverColor end)
    b.MouseLeave:Connect(function() b.BackgroundColor3 = Color3.fromRGB(25, 30, 40) end)
    b.MouseButton1Click:Connect(callback)
end

createControlBtn("-", 0, COLORS.ACCENT, function() Main.Visible = false; OpenBtn.Visible = true end)
createControlBtn("X", 45, COLORS.HOVER_RED, function() sg:Destroy() end)

OpenTrigger.MouseButton1Click:Connect(function()
    OpenBtn.Visible = false
    Main.Visible = true
end)

-- Restante do menu (Sidebar, Perfil, etc) mantido igual...

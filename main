bStroke.Color = COLORS.PREMIUM
bStroke.Thickness = 1.5

-- [[ L√ìGICA DO SERVER PREMIUM ]] --
bGen.MouseButton1Click:Connect(function()
    bGen.Text = "SEARCHING..."
    local success, result = pcall(function()
        return HttpService:JSONDecode(game:HttpGet("https://games.roblox.com/v1/games/" .. game.PlaceId .. "/servers/Public?sortOrder=Asc&limit=100"))
    end)
    
    if success and result.data then
        -- Tenta teleportar para o primeiro servidor da lista (geralmente menos lotado/mais novo)
        for _, server in ipairs(result.data) do
            if server.playing < server.maxPlayers then
                TeleportService:TeleportToPlaceInstance(game.PlaceId, server.id)
                break
            end
        end
    else
        bGen.Text = "ERROR! TRY AGAIN"
        task.wait(2)
        bGen.Text = "GENERATE NEW SERVER"
    end
end)

-- BOTAO FECHAR
local CloseBtn = Instance.new("TextButton", TopBar)
CloseBtn.Size = UDim2.fromOffset(30, 30)
CloseBtn.Position = UDim2.new(1, -38, 0.5, -15)

local Players = game:GetService("Players")
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")
local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")

local LocalPlayer = Players.LocalPlayer

-- [[ FUN√á√ÉO PARA UI PROTEGIDA ]] --
local function GetSafeGui()
    if gethui then return gethui() end
    if CoreGui then return CoreGui end
    return LocalPlayer:WaitForChild("PlayerGui")
end

local parentGui = GetSafeGui()

-- [[ PALETA DE CORES CHILLI HUB ]] --
local COLORS = {
    BG = Color3.fromRGB(16, 24, 39),
    GRAD_1 = Color3.fromRGB(12, 18, 32),
    GRAD_2 = Color3.fromRGB(21, 30, 47),
    GRAD_3 = Color3.fromRGB(10, 82, 120),
    STROKE_MAIN = Color3.fromRGB(56, 189, 248),
    TEXT = Color3.fromRGB(241, 245, 249),
    ACCENT = Color3.fromRGB(34, 211, 238),
    BTN_SIDE = Color3.fromRGB(30, 41, 59)
}

-- [[ UI PRINCIPAL ]] --
local sg = Instance.new("ScreenGui")
sg.Name = "ChinelaoHub_ChilliStyle"
sg.ResetOnSpawn = false
sg.Parent = parentGui

-- FRAME PRINCIPAL (CARD)
local Main = Instance.new("Frame", sg)
Main.Size = UDim2.fromOffset(550, 350)
Main.Position = UDim2.new(0.5, -275, 0.5, -175)
Main.BackgroundColor3 = COLORS.BG
Main.BorderSizePixel = 0
Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 20)

-- Gradiente de Fundo Estilo Chilli
local BgGrad = Instance.new("UIGradient", Main)
BgGrad.Rotation = 35
BgGrad.Color = ColorSequence.new({
    ColorSequenceKeypoint.new(0.00, COLORS.GRAD_1),
    ColorSequenceKeypoint.new(0.55, COLORS.GRAD_2),
    ColorSequenceKeypoint.new(1.00, COLORS.GRAD_3),
})

-- Borda com Brilho (Stroke)
local Glow = Instance.new("UIStroke", Main)
Glow.Thickness = 2
Glow.Color = COLORS.STROKE_MAIN
Glow.Transparency = 0.2

-- [[ SIDEBAR LATERAL ]] --
local Sidebar = Instance.new("Frame", Main)
Sidebar.Size = UDim2.new(0, 140, 1, -60)
Sidebar.Position = UDim2.new(0, 15, 0, 45)
Sidebar.BackgroundTransparency = 1

local UIList = Instance.new("UIListLayout", Sidebar)
UIList.Padding = UDim.new(0, 10)

local function createTabBtn(name)
    local btn = Instance.new("TextButton", Sidebar)
    btn.Size = UDim2.new(1, 0, 0, 40)
    btn.BackgroundColor3 = COLORS.BTN_SIDE
    btn.Text = name
    btn.TextColor3 = COLORS.TEXT
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 13
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 10)
    
    local s = Instance.new("UIStroke", btn)
    s.Thickness = 1
    s.Color = COLORS.STROKE_MAIN
    s.Transparency = 0.6
    
    return btn
end

local btnRadar = createTabBtn("RADAR")
local btnServers = createTabBtn("SERVERS")

-- [[ CONTAINER DE CONTE√öDO ]] --
local Container = Instance.new("Frame", Main)

-- PAGINAS
local Container = Instance.new("Frame", Main)
Container.Size = UDim2.new(1, -210, 1, -80)
Container.Position = UDim2.new(0, 195, 0, 65)
Container.BackgroundTransparency = 1
Container.ZIndex = 11

local pages = {}
local function createPage(name)
    local p = Instance.new("ScrollingFrame", Container)
    p.Size = UDim2.new(1, 0, 1, 0)
    p.BackgroundTransparency = 1
    p.Visible = false
    p.ScrollBarThickness = 3
    p.ZIndex = 15
    p.AutomaticCanvasSize = Enum.AutomaticSize.Y
    Instance.new("UIListLayout", p).Padding = UDim.new(0, 12)
    pages[name] = p
    return p
end

local pPlayer = createPage("PLAYER")
pPlayer.Visible = true
local pFly = createPage("FLY")
local pServer = createPage("SERVERS")

local function createTab(name)
    local b = Instance.new("TextButton", Sidebar)
    b.Size = UDim2.new(0, 160, 0, 42)
    b.BackgroundColor3 = Color3.fromRGB(25, 30, 40)
    b.Text = name
    b.TextColor3 = COLORS.TEXT
    b.Font = Enum.Font.GothamBold
    b.TextSize = 14
    b.ZIndex = 16
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 8)
    b.MouseButton1Click:Connect(function()
        for _, v in pairs(pages) do v.Visible = false end
        pages[name].Visible = true
    end)
end

createTab("PLAYER")
createTab("FLY")
createTab("SERVERS")

-- COMPONENTE TOGGLE
local function createToggle(parent, text, callback)
    local card = Instance.new("Frame", parent)
    card.Size = UDim2.new(1, -10, 0, 55)
    card.BackgroundColor3 = COLORS.CARD_BG
    card.ZIndex = 16
    Instance.new("UICorner", card).CornerRadius = UDim.new(0, 8)
    
    local l = Instance.new("TextLabel", card)
    l.Text = text
    l.Size = UDim2.new(1, -70, 1, 0)
    l.Position = UDim2.new(0, 18, 0, 0)
    l.TextColor3 = COLORS.TEXT
    l.Font = Enum.Font.GothamSemibold
    l.TextSize = 15
    l.BackgroundTransparency = 1
    l.TextXAlignment = Enum.TextXAlignment.Left
    l.ZIndex = 17
    
    local btn = Instance.new("TextButton", card)
    btn.Size = UDim2.fromOffset(45, 24)
    btn.Position = UDim2.new(1, -60, 0.5, -12)
    btn.BackgroundColor3 = COLORS.TOGGLE_OFF
    btn.Text = ""
    btn.ZIndex = 17
    Instance.new("UICorner", btn).CornerRadius = UDim.new(1, 0)
    
    local dot = Instance.new("Frame", btn)
    dot.Size = UDim2.fromOffset(18, 18)
    dot.Position = UDim2.new(0, 3, 0.5, -9)
    dot.BackgroundColor3 = Color3.new(1, 1, 1)
    dot.ZIndex = 18
    Instance.new("UICorner", dot).CornerRadius = UDim.new(1, 0)
    
    local act = false
    btn.MouseButton1Click:Connect(function()
        act = not act
        dot:TweenPosition(act and UDim2.new(1, -21, 0.5, -9) or UDim2.new(0, 3, 0.5, -9), "Out", "Quad", 0.15, true)
        btn.BackgroundColor3 = act and COLORS.TOGGLE_ON or COLORS.TOGGLE_OFF
        callback(act)
    end)
end

-- LÓGICA AUTO PURCHASE
_G.AutoPurchase = false
task.spawn(function()
    while true do
        task.wait(0.1)
        if _G.AutoPurchase then
            pcall(function()
                for _, v in pairs(game:GetDescendants()) do
                    if v:IsA("ProximityPrompt") then
                        v.HoldDuration = 0
                        if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
                            local dist = (LocalPlayer.Character.HumanoidRootPart.Position - v.Parent.Position).Magnitude
                            if dist < v.MaxActivationDistance then fireproximityprompt(v) end
                        end
                    end
                end
            end)
        end
    end
end)

-- AJUSTE DE NOME AQUI:
createToggle(pPlayer, "Auto Purchase", function(s) _G.AutoPurchase = s end)

createToggle(pFly, "Enable Fly GUI V3", function(s)
    if s then loadstring(game:HttpGet("https://rawscripts.net/raw/Universal-Script-FLY-GUI-V3-19840"))() end
end)
createToggle(pServer, "Rejoin Server", function(s)
    if s then TeleportService:Teleport(game.PlaceId, LocalPlayer) end
end)

-- DRAG
local function makeDraggable(gui, target)
    local target = target or gui
    local dragging, dragInput, dragStart, startPos
    gui.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true; dragStart = input.Position; startPos = target.Position
        end
    end)
    gui.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then dragInput = input end
    end)
    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            local delta = input.Position - dragStart
            target.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    UserInputService.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end
    end)
end

makeDraggable(TopBar, Main)
makeDraggable(OpenBtn)
